{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noImplicitAny": false,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@vendor/*": [
        "./vendor/*"
      ],
      "@/*": [
        "./resources/react/*"
      ],
      "@gen/*": [
        "./resources/react/@gen/*"
      ],
      "@types/*": [
        "./resources/react/@types/*"
      ],
      "@shadcn/*": [
        "./resources/react/@shadcn/*"
      ],
      "@components/*": [
        "./resources/react/@components/*"
      ],
      "@app/*": [
        "./resources/react/app/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "public",
    "vendor"
  ]
}
